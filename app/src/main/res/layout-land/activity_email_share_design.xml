<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!-- The main content view -->


    <LinearLayout
        android:id="@+id/layoutmain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Top Bar Ends-->

        <RelativeLayout
            android:id="@+id/relativeTitleBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/header_image">


            <LinearLayout
                android:id="@+id/linearTopBar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:padding="8dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/header"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgValorTopicon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/header_logo" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <LinearLayout
                    android:id="@+id/linearNavigatiion"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnNav"
                        android:layout_width="40dp"
                        android:layout_height="25dp"
                        android:background="@drawable/selector_btn_navbtn"
                        android:padding="2dp" />
                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>

        <!-- Top Bar Ends-->


        <TextView
            android:id="@+id/txtProgress"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/progress_fifth"
            android:visibility="gone" />

        <!-- Progress bar Ends-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:paddingBottom="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgdownArrow"
                    android:layout_width="50dp"
                    android:layout_height="38dp"
                    android:background="@drawable/down_arrow" />

            </RelativeLayout>


            <LinearLayout
                android:id="@+id/linearProgress"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/progress_bar"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:visibility="visible">
                <!--android:paddingBottom="10dp"-->


                <TextView
                    android:id="@+id/txtStep1"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:background="@drawable/white_background_for_text"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/one"
                    android:textColor="@drawable/selector_btn_textcolor_blacktored"
                    android:textSize="@dimen/text.size.regular" />

                <TextView
                    android:id="@+id/txtStep1Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:gravity="center_vertical"
                    android:text="@string/choose.application"
                    android:textSize="@dimen/text.size.regular"
                    android:textColor="@drawable/selector_btn_textcolor_grid" />
                <!--android:textSize="10sp"-->

                <TextView
                    android:id="@+id/txtStep2"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:background="@drawable/white_background_for_text"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/two"
                    android:textColor="@drawable/selector_btn_textcolor_blacktored"
                    android:textSize="@dimen/text.size.regular" />

                <TextView
                    android:id="@+id/txtStep2Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:gravity="center_vertical"
                    android:text="@string/choose.series"
                    android:textSize="@dimen/text.size.regular"
                    android:textColor="@drawable/selector_btn_textcolor_grid" />

                <TextView
                    android:id="@+id/txtSteps3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:background="@drawable/white_background_for_text"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/three"
                    android:textColor="@drawable/selector_btn_textcolor_blacktored"
                    android:textSize="@dimen/text.size.regular" />

                <TextView
                    android:id="@+id/txtSteps3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:gravity="center_vertical"
                    android:text="@string/choose.model"
                    android:textSize="@dimen/text.size.regular"
                    android:textColor="@drawable/selector_btn_textcolor_grid"
                    />

                <TextView
                    android:id="@+id/txtStep3"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:background="@drawable/white_background_for_text"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/four"
                    android:textColor="@drawable/selector_btn_textcolor_blacktored"
                    android:textSize="@dimen/text.size.regular" />

                <TextView
                    android:id="@+id/txtStep3Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:gravity="center_vertical"
                    android:text="@string/design.your.valor.fireplace"
                    android:textSize="@dimen/text.size.regular"
                    android:textColor="@drawable/selector_btn_textcolor_grid" />


                <TextView
                    android:id="@+id/txtStep4"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:background="@drawable/white_background_for_text"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="@string/five"
                    android:textColor="@drawable/selector_btn_textcolor_blacktored"
                    android:textSize="@dimen/text.size.regular" />

                <TextView
                    android:id="@+id/txtStep4Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:gravity="center_vertical"
                    android:text="@string/email.and.share.your.design"
                    android:textSize="@dimen/text.size.regular"
                    android:textColor="@drawable/selector_btn_textcolor_grid" />

            </LinearLayout>

        </RelativeLayout>


        <!-- Progress bar Ends-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/linearImageSection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/margin.tiny"
                android:layout_marginRight="@dimen/margin.tiny"
                android:layout_weight="0.40"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="@dimen/margin.tiny"
                android:paddingRight="@dimen/margin.tiny">

                <RelativeLayout
                    android:id="@+id/relativeImageParent"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.30"
                    android:padding="2dp"
                    android:background="@drawable/bordered_layout_bg">

                    <ImageView
                        android:id="@+id/imgBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:scaleType="fitXY" />

                    <RelativeLayout
                        android:id="@+id/relativeFrame"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:visibility="gone">

                        <ImageView
                            android:id="@+id/imgCenter"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true" />

                        <ImageView
                            android:id="@+id/imgCenterbackground"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"

                            />
                    </RelativeLayout>

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="0.70"
                    android:orientation="vertical"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin.tiny"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <Button
                            android:id="@+id/btnEmail"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="@dimen/margin.tiny"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_for_finish"
                            android:text="@string/submit"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text.size.regular" />

                        <Button
                            android:id="@+id/btnPrint"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/margin.tiny"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_for_finish"
                            android:text="@string/print"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text.size.regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin.tiny"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <Button
                            android:id="@+id/btnLocateAdealer"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="@dimen/margin.tiny"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_for_finish"
                            android:text="@string/locate.a.dealer"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text.size.regular" />

                        <Button
                            android:id="@+id/btnPdfBrochure"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/margin.tiny"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_for_finish"
                            android:text="@string/pdf.brochure"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text.size.regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin.tiny"
                        android:orientation="horizontal"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp">

                        <Button
                            android:id="@+id/btnPdfManual"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="@dimen/margin.tiny"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_for_finish"
                            android:text="@string/pdf.manual"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text.size.regular" />

                        <Button
                            android:id="@+id/btnShare"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="@dimen/margin.tiny"
                            android:layout_weight="1"
                            android:background="@drawable/selector_btn_for_finish"
                            android:text="@string/share"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text.size.regular" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearBuildValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corners_for_redbg"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/margin.tiny"
                        android:paddingRight="@dimen/margin.tiny">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="10dp"
                            android:padding="1dp"
                            android:text="@string/build.a.new.valor"
                            android:textColor="@drawable/selector_btn_textcolor" />

                        <ImageView
                            android:id="@+id/imgRefresh"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/selector_btn_refresh" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="@dimen/margin.tiny"
                android:layout_marginTop="5dp"
                android:layout_weight="0.60"
                android:orientation="vertical"
                android:paddingBottom="@dimen/margin.tiny"
                android:paddingLeft="@dimen/margin.tiny"
                android:paddingRight="@dimen/margin.tiny">

                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="@dimen/margin.tiny"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:layout_marginRight="@dimen/margin.tiny"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/greyText" />


                <LinearLayout
                    android:id="@+id/layouttotal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/margin.tiny"
                    android:layout_marginRight="8dp"
                    android:padding="5dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/txtTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:text="TOTAL"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text.size.regular"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtTotalAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin.tiny"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical|center_horizontal"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text.size.regular" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/imgBottomLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="2dp"
            android:src="@drawable/bottom_logo" />

    </LinearLayout>

    <!-- The main content view ends -->


    <!-- The navigation drawer -->

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layout_marginTop="10dp"
        android:background="@color/navlistbg"
        android:id="@+id/menuNav"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@color/navlistbg"
            android:gravity="center_vertical"
            android:descendantFocusability="afterDescendants"

            android:orientation="horizontal">

            <TextView
                android:id="@+id/userName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/salesmanLogin"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_margin="5dp"
                />

            <ImageView
                android:layout_width="40dp"
                android:id="@+id/userImg"
                android:layout_height="40dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="10dp"
                android:padding="3dp"
                android:scaleType="fitXY"
                android:src="@drawable/person_icon" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@color/greydarkBackGround"/>


        <ListView
            android:id="@+id/left_drawer"
            android:layout_width="320dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:background="@color/navlistbg"
            android:listSelector="@color/buttonBuildValor"
            android:choiceMode="singleChoice" />

    </LinearLayout>

    <!-- The navigation drawer ends-->


</android.support.v4.widget.DrawerLayout>